generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BlogStatus {
  PUBLISHED
  DRAFT
  DELETED
}


enum GalleryStatus {
  PUBLISHED
  DRAFT
  DELETED
}

enum BookingStatus{
  BOOKED
  CANCELED

}

enum UserType{
  ADMIN
  USER
  CAMPHOST
  SUPERADMIN
}
enum UserStatus{
  DISABLED
  ENABLED
}

enum BookingPaymentStatus{
  PENDING
  CLEARED
}

model User{
  id Int @id @default(autoincrement())
  fullName String
  phoneNumber String
  email String @unique
  userType UserType @default(USER)
  userStatus UserStatus @default(ENABLED)
  campBookings CampBookings[]
}

model Blog {
  id              Int        @id @default(autoincrement())
  title           String
  excerpt         String
  content         String
  author          String
  slug            String     @unique
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  deletedAt       DateTime   @default(now())
  status          BlogStatus @default(DRAFT)
  metaTitle       String
  metaDescription String
  metaKeywords    String
  indexable       Boolean    @default(true)
  coverImage      String
  tags            String[]
  views           Int        @default(0)
}


model CampSite{
  id Int @id @default(autoincrement()) 
  name String
  description String
  slug String @unique
  images String[]
  pricePerNight Decimal @db.Decimal(10,2)
  campSiteFacilities CampSiteFacility[]
  campHost CampHost?
  bookings CampBookings[]

  createdAt DateTime @default(now())
  updatedAt DateTime  @updatedAt
}
model CampHost{
  id Int @id @default(autoincrement())
  fullName String
  email String @unique
  phoneNumber String
  profilePicture String

  campId Int @unique
  campSite CampSite @relation(fields: [campId], references: [id])
}
model Facility {
  id Int @id @default(autoincrement())
  name String
  icon String
  slug String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  campSites CampSiteFacility[]
}

model CampSiteFacility {
  id Int @id @default(autoincrement())
  
  campId Int
  facilityId Int

  campSite CampSite @relation(fields: [campId], references: [id])
  facility Facility @relation(fields: [facilityId], references: [id])
}

model CampBookings{
  id Int @default(autoincrement()) @id
  userId Int
  userInfo User @relation(fields: [userId],references: [id])
  checkInDate DateTime
  checkOutDate DateTime
  totalPrice Decimal @db.Decimal(10,2)
  paymentStatus BookingPaymentStatus @default(PENDING)
  campSiteId Int
  bookingStatus BookingStatus @default(BOOKED)
  campSite CampSite @relation(fields: [campSiteId], references: [id])
}

model Gallery {
  id              Int           @default(autoincrement())
  title           String
  description     String
  excerpt         String
  images          String[]
  coverImage      String
  slug            String        @unique
  metaTitle       String?
  metaDescription String?
  metaKeywords    String?
  galleryStatus   GalleryStatus @default(DRAFT)
  imageAlt        String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @default(now())
}

model AboutUs {
  id         Int      @id @default(1)
  aboutUs    String
  textbox_1  String
  textbox_2  String
  mission    String
  vision     String
  coreValues CoreValue[]
  stats      Stat[]
  updatedAt  DateTime @updatedAt
}

model Stat {
  id        Int     @id @default(autoincrement())
  value     String
  icon      String
  heading   String

  aboutUsId Int
  aboutUs   AboutUs @relation(fields: [aboutUsId], references: [id])
}


model CoreValue {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  icon        String

  aboutUsId  Int
  aboutUs   AboutUs @relation(fields: [aboutUsId], references: [id])
}

model Contact {
  id           Int    @id @default(1)
  email        String
  phoneNumber  String
  address      String
}
